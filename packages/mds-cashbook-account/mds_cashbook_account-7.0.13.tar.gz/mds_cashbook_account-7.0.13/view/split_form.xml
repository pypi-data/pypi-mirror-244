<data>

    <xpath expr="/form/notebook/page[@name='description']" position="after">

        <page name="amount_net" col="6" string="Net and Tax Amounts">
            <label name="amount_net"/>
            <field name="amount_net" symbol="currency"/>
            <newline/>

            <label name="ena_tax0" colspan="2" xalign="0.0"/>
            <label name="ena_tax1" colspan="2" xalign="0.0"/>
            <label name="ena_tax2" colspan="2" xalign="0.0"/>

            <field name="ena_tax0" xexpand="0"/>
            <field name="amount_tax0" symbol="currency"/>

            <field name="ena_tax1" xexpand="0"/>
            <field name="amount_tax1" symbol="currency"/>

            <field name="ena_tax2" xexpand="0"/>
            <field name="amount_tax2" symbol="currency"/>

            <field name="avail_tax0"/>
            <field name="avail_tax1"/>
            <field name="avail_tax2"/>

            <label id="lab0" xalign="0.0" colspan="6" string=" "/>
            <label id="lab1" xalign="0.0" colspan="6"
                string="If you want to specify taxes, turn on the appropriate fields."/>
            <label id="lab2" xalign="0.0" colspan="6"
                string="The values are automatically calculated based on the tax stored in the category."/>
        </page>

    </xpath>

</data>
